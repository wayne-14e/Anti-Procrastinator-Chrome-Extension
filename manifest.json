{
    "manifest_version": 3,
    "name": "Anti-Procrastinator",
    "version": "1.3",
    "description": "Blocks procrastination websites like YouTube, Instagram, Facebook.",
    "permissions": [
        "tabs",
        "webNavigation",
        "storage",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.youtu.be/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.reddit.com/*",
        "*://*.netflix.com/*",
        "*://*.google.com/*",
        "*://*.google.co.in/*"
    ],
    "web_accessible_resources": [{
        "resources": ["blocked.html"],
        "matches": ["<all_urls>"]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}